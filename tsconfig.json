{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
            "*": ["node_modules/*", "src/types/*"]
        }

	},
	"include": [
		"src/**/*"
	]
}
